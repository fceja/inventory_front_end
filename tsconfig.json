{
  "compilerOptions": {
    "target": "ES2020",
    "useDefineForClassFields": true,
    "lib": [
      "ES2020",
      "DOM",
      "DOM.Iterable"
    ],
    "module": "ESNext",
    "skipLibCheck": true,
    /* Bundler mode */
    "moduleResolution": "bundler",
    "allowImportingTsExtensions": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "jsx": "react-jsx",
    /* Linting */
    "strict": true,
    "noImplicitAny": true,
    "noImplicitReturns": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    /* Alias paths */
    "baseUrl": "./",
    "paths": {
      "@api/*": [
        "src/ts/api/*"
      ],
      "@components/*": [
        "src/ts/frontend/components/*"
      ],
      "@common/*": [
        "src/ts/frontend/common/*"
      ],
      "@hooks/*": [
        "src/ts/frontend/hooks/*"
      ],
      "@pages/*": [
        "src/ts/frontend/pages/*"
      ],
      "@scss/*": [
        "./src/scss/*"
      ],
      "@store/*": [
        "src/ts/frontend/store/*"
      ],
      "@validations/*": [
        "src/ts/frontend/validations/*"
      ],
      "@utils/*": [
        "src/ts/frontend/utils/*"
      ]
    }
  },
  "include": [
    "src"
  ],
  "references": [
    {
      "path": "./tsconfig.node.json"
    }
  ]
}